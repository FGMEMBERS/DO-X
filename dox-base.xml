<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FDM), Pierre GEOFFROY (FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <type type="string">seaplane</type>

    <startup>
      <splash-texture>Aircraft/DO-X/dox-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/DO-X/Sounds/dox-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/DO-X/Models/dox.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                      <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                      <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                      <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                      <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                      <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                      <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                      <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                      <!-- 7 color -->
        <int type="bool" n="8" alias="/controls/lighting/nav-lights">  0 </int>  <!-- 8 nav-lights -->
        <int type="double" n="9" alias="/sim/model/lights/beacon/state"> 0 </int>      <!-- 9 beacon-lights -->
        <int type="double" n="10" alias="/sim/model/lights/strobe/state"> 0 </int>     <!--10 strobe-lights -->
        <int type="bool" n="11" alias="/controls/lighting/landing-lights"> 0 </int>  <!--11 landing-lights -->
        <int n="12" alias="/controls/electric/key-pos">  0 </int>             <!--12 key position -->
        <float n="2" alias="/position/gear-agl-m">  0 </float>                <!--2 altitude for MP shadow -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <controls>
      <generic>
        <int  type="double" n="13" alias="/controls/engines/throttle-pilot-left"/>
        <int  type="double" n="14" alias="/controls/engines/throttle-pilot-right"/>
        <int  type="double" n="15" alias="/controls/engines/helpengine-lever"/>
        <int  type="double" n="16" alias="/controls/engines/average-rpm-left"/>
        <int  type="double" n="17" alias="/controls/engines/average-rpm-right"/>
        <int  type="double" n="18" alias="/controls/anchor-lat"/>
        <int  type="double" n="19" alias="/controls/anchor-lon"/>
        <int  type="bool" n="20" alias="/controls/anchor"/>
        <int  type="bool" n="21" alias="/controls/lighting/panel"/>
        <int  type="bool" n="22" alias="/controls/lighting/navigationcabin"/>
        <int  type="bool" n="23" alias="/controls/lighting/engineerpanel"/>
        <int  type="bool" n="24" alias="/controls/lighting/radiocabin"/>
        <int  type="bool" n="25" alias="/controls/lighting/helpenginecabin"/>
        <int  type="bool" n="26" alias="/controls/lighting/brightness"/>
      </generic>
    </controls>

    <help>
      <title>Dornier Do X</title>
     <!--
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
     -->
      <key>
        <name>B</name>
        <desc>Cast Anchor (down)</desc>
      </key>
      <key>
        <name>b</name>
        <desc>Hoist Anchor (up)</desc>
      </key>
      <key>
        <name>s</name>
        <desc>Start engine by engine</desc>
      </key>
      <key>
        <name>S</name>
        <desc>Stop engine by engine</desc>
      </key>
      <key>
        <name>PgUp</name>
        <desc>Increase speed of locked engines</desc>
      </key>
      <key>
        <name>PgDown</name>
        <desc>Decrease speed of locked engines</desc>
      </key>
      <key>
        <name>,</name>
        <desc>Increase speed left locked engines</desc>
      </key>
      <key>
        <name>;</name>
        <desc>Decrease speed left locked engines</desc>
      </key>
      <key>
        <name>.</name>
        <desc>Increase speed right locked engines</desc>
      </key>
      <key>
        <name>:</name>
        <desc>Decrease speed right locked engines</desc>
      </key>
      <key>
        <name>m</name>
        <desc>Increase Mixtures</desc>
      </key>
      <key>
        <name>M</name>
        <desc>Decrease Mixtures</desc>
      </key>
      <key>
        <name>l</name>
        <desc>Interior Lights on/off</desc>
      </key>
      <key>
        <name>Ctrl-I</name>
        <desc>Open DO X Engineer Menu</desc>
      </key>
    </help>

    <menubar include="Dialogs/dox-menu.xml"/>

  </sim>

  <!-- never set the magnetos here to 0, cause the sound for the cutoff is controlled by magnetos 0 in dox-sound.xml -->
  <controls>
    <engines>
      <throttle-pilot-left type="double">0.0</throttle-pilot-left>
      <throttle-pilot-right type="double">0.0</throttle-pilot-right>
      <helpengine-lever type="double">0.5</helpengine-lever>
      <engine n="0">
        <magnetos>3</magnetos>
      </engine>
      <engine n="1">
        <magnetos>3</magnetos>
      </engine>
      <engine n="2">
        <magnetos>3</magnetos>
      </engine>
      <engine n="3">
        <magnetos>3</magnetos>
      </engine>
      <engine n="4">
        <magnetos>3</magnetos>
      </engine>
      <engine n="5">
        <magnetos>3</magnetos>
      </engine>
      <engine n="6">
        <magnetos>3</magnetos>
      </engine>
      <engine n="7">
        <magnetos>3</magnetos>
      </engine>
      <engine n="8">
        <magnetos>3</magnetos>
      </engine>
      <engine n="9">
        <magnetos>3</magnetos>
      </engine>
      <engine n="10">
        <magnetos>3</magnetos>
      </engine>
      <engine n="11">
        <magnetos>3</magnetos>
      </engine>
    </engines>

    <lighting>
      <panel type="bool">0</panel>
      <navigationcabin type="bool">0</navigationcabin>
      <engineerpanel type="bool">0</engineerpanel>
      <radiocabin type="bool">0</radiocabin>
      <helpenginecabin type="bool">0</helpenginecabin>
      <brightness type="double">1.0</brightness>
    </lighting>
  </controls>

  <engines>
    <engine n="0">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="1">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="2">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="3">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="4">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="5">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="6">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="7">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="8">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="9">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="10">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
    <engine n="11">
      <rpm>50</rpm>
      <clutch type="bool">1</clutch>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/dox-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/DO-X/Nasal/doors.nas</file>
    </doors>
    <dox>
      <file>Aircraft/DO-X/Nasal/dox.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-anchor.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-lights.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-clutch.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-helpengine.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-menu.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-oil.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-rpm.nas</file>
      <file>Aircraft/DO-X/Nasal/dox-starter.nas</file>
      <file>Aircraft/DO-X/Nasal/immat.nas</file>
      <file>Aircraft/DO-X/Nasal/liveries.nas</file>
    </dox>
  </nasal>

</PropertyList>

