<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <author>Emmanuel BARANGER (3D/FDM), Pierre GEOFFROY (FDM)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>

    <fuel-fraction>1.0</fuel-fraction>

    <type type="string">seaplane</type>

    <startup>
      <splash-texture>Aircraft/DO-X/dox-splash.png</splash-texture>
    </startup>

    <sound>
      <path archive="y">Aircraft/DO-X/Sounds/dox-sound.xml</path>
    </sound>

    <model>
      <path archive="y">Aircraft/DO-X/Models/dox.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int type="int" n="0">  0 </int>                                      <!-- 0 immat -->
        <int type="int" n="1">  0 </int>                                      <!-- 1 immat -->
        <int type="int" n="2">  0 </int>                                      <!-- 2 immat -->
        <int type="int" n="3">  0 </int>                                      <!-- 3 immat -->
        <int type="int" n="4">  0 </int>                                      <!-- 4 immat -->
        <int type="int" n="5">  0 </int>                                      <!-- 5 immat -->
        <int type="bool" n="6"> 1 </int>                                      <!-- 6 smoke/bomb/torpedo -->
        <int type="int" n="7">  0 </int>                                      <!-- 7 color -->
        <int n="8" alias="/systems/electrical/outputs/nav-lights">  0 </int>  <!-- 8 nav-lights -->
        <int n="9" alias="/sim/model/lights/beacon/state">  false </int>      <!-- 9 strobe-lights -->
        <int n="10" alias="/controls/electric/key-pos">  0 </int>             <!-- 10 key position -->
        <float n="2" alias="/position/gear-agl-m">  0 </float>                <!-- 11 altitude for MP shadow -->
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>  
      </generic>
    </multiplay>

    <help>
      <title>Dornier Do X</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
    </help>

    <menubar include="Dialogs/dox-menu.xml"/>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>3</magnetos>
      </engine>
      <engine n="1">
        <magnetos>3</magnetos>
      </engine>
      <engine n="2">
        <magnetos>3</magnetos>
      </engine>
      <engine n="3">
        <magnetos>3</magnetos>
      </engine>
      <engine n="4">
        <magnetos>3</magnetos>
      </engine>
      <engine n="5">
        <magnetos>3</magnetos>
      </engine>
      <engine n="6">
        <magnetos>3</magnetos>
      </engine>
      <engine n="7">
        <magnetos>3</magnetos>
      </engine>
      <engine n="8">
        <magnetos>3</magnetos>
      </engine>
      <engine n="9">
        <magnetos>3</magnetos>
      </engine>
      <engine n="10">
        <magnetos>3</magnetos>
      </engine>
      <engine n="11">
        <magnetos>3</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <rpm>50</rpm>
    </engine>
    <engine n="1">
      <rpm>50</rpm>
    </engine>
    <engine n="2">
      <rpm>50</rpm>
    </engine>
    <engine n="3">
      <rpm>50</rpm>
    </engine>
    <engine n="4">
      <rpm>50</rpm>
    </engine>
    <engine n="5">
      <rpm>50</rpm>
    </engine>
    <engine n="6">
      <rpm>50</rpm>
    </engine>
    <engine n="7">
      <rpm>50</rpm>
    </engine>
    <engine n="8">
      <rpm>50</rpm>
    </engine>
    <engine n="9">
      <rpm>50</rpm>
    </engine>
    <engine n="10">
      <rpm>50</rpm>
    </engine>
    <engine n="11">
      <rpm>50</rpm>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/dox-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/DO-X/Nasal/doors.nas</file>
    </doors>
    <dox>
      <file>Aircraft/DO-X/Nasal/immat.nas</file>
      <file>Aircraft/DO-X/Nasal/liveries.nas</file>
    </dox>    
  </nasal>
  
</PropertyList>

