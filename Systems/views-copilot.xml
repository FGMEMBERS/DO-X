<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <chase-distance-m type="double" archive="y"> -50 </chase-distance-m>
  
  <view n="100">
    <name>Radio Cabin View</name>
    <type>lookfrom</type>
    <config>
      <internal type="bool">true</internal>
      <from-model type="bool">false</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <eye-lat-deg-path>/position/latitude-deg</eye-lat-deg-path>
      <eye-lon-deg-path>/position/longitude-deg</eye-lon-deg-path>
      <eye-alt-ft-path>/position/altitude-ft</eye-alt-ft-path>
      <eye-heading-deg-path>/orientation/heading-deg</eye-heading-deg-path>
      <eye-pitch-deg-path>/orientation/pitch-deg</eye-pitch-deg-path>
      <eye-roll-deg-path>/orientation/roll-deg</eye-roll-deg-path>
      <at-model type="bool">false</at-model>
      <at-model-idx type="int">0</at-model-idx>
      <ground-level-nearplane-m type="double">0.05f</ground-level-nearplane-m>
      <x-offset-m archive="y">  0.200 </x-offset-m> <!-- Right -->
      <y-offset-m archive="y">  0.400 </y-offset-m> <!-- Up    -->
      <z-offset-m archive="y"> -3.430 </z-offset-m> <!-- Back  -->
      <heading-offset-deg type="double"> -90 </heading-offset-deg>
      <pitch-offset-deg type="double"> -5 </pitch-offset-deg>
      <default-field-of-view-deg type="double"> 60 </default-field-of-view-deg>
    </config>
  </view>
  
  <!-- Doesn't work that great - lots of jitter. -->
  <view n="0">
    <name>Copilot View</name>
    <type>lookfrom</type>
    <config>
      <internal type="bool">true</internal>
      <from-model type="bool">false</from-model>
      <from-model-idx type="int">0</from-model-idx>
      <eye-lat-deg-path>/position/latitude-deg</eye-lat-deg-path>
      <eye-lon-deg-path>/position/longitude-deg</eye-lon-deg-path>
      <eye-alt-ft-path>/position/altitude-ft</eye-alt-ft-path>
      <eye-heading-deg-path>/orientation/heading-deg</eye-heading-deg-path>
      <eye-pitch-deg-path>/orientation/pitch-deg</eye-pitch-deg-path>
      <eye-roll-deg-path>/orientation/roll-deg</eye-roll-deg-path>
      <at-model type="bool">false</at-model>
      <at-model-idx type="int">0</at-model-idx>
      <x-offset-m archive="y">   0.685 </x-offset-m>  <!-- Right -->
      <y-offset-m archive="y">   0.455 </y-offset-m>  <!-- Up    -->
      <z-offset-m archive="y"> -11.450 </z-offset-m>  <!-- Back  -->
      <heading-offset-deg type="double">0</heading-offset-deg>
      <pitch-offset-deg type="double">-10</pitch-offset-deg>
      <roll-offset-deg type="double">0</roll-offset-deg>
      <default-field-of-view-deg> 70 </default-field-of-view-deg>
    </config>
  </view>
  
  <!-- Move the center of the external views. -->
  <view n="1">
    <config>
      <at-model type="bool">false</at-model>
      <target-z-offset-m archive="y"> 20 </target-z-offset-m>
    </config>
  </view>
  <view n="2">
    <config>
      <at-model type="bool">false</at-model>
      <target-z-offset-m archive="y"> 20 </target-z-offset-m>
    </config>
  </view>
  <view n="3">
    <config>
      <at-model type="bool">false</at-model>
      <target-z-offset-m archive="y"> 20 </target-z-offset-m>
    </config>
  </view>
  <view n="5">
    <config>
      <at-model type="bool">false</at-model>
      <target-z-offset-m archive="y"> 20 </target-z-offset-m>
    </config>
  </view>
  <view n="6">
    <config>
      <at-model type="bool">false</at-model>
      <target-z-offset-m archive="y"> 20 </target-z-offset-m>
    </config>
  </view>
  
</PropertyList>
