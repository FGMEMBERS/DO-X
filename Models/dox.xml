  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/controls/flight/rudder</property>
    <factor>10</factor>
    <center>
      <x-m> 18.787 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.746 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>directionG</object-name>
    <property>/controls/flight/rudder</property>
    <factor>10</factor>
    <center>
      <x-m> 16.998 </x-m>
      <y-m> -1.742 </y-m>
      <z-m>  0.550 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>directionD</object-name>
    <property>/controls/flight/rudder</property>
    <factor>10</factor>
    <center>
      <x-m> 16.998 </x-m>
      <y-m>  1.742 </y-m>
      <z-m>  0.550 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>gouvernail</object-name>
    <property>/controls/flight/rudder</property>
    <factor>10</factor>
    <center>
      <x-m>  5.143 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -4.425 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/controls/flight/elevator</property>
    <factor>10</factor>
    <center>
      <x-m> 18.299 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  1.713 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Les ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>20</factor>
    <center>
      <x-m> -0.876 </x-m>
      <y-m> 15.426 </y-m>
      <z-m> -0.046 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>20</factor>
    <center>
      <x-m> -0.876 </x-m>
      <y-m> 15.426 </y-m>
      <z-m> -0.046 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

