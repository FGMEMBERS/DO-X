<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>yoke.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>Yoke</object-name>
    <object-name>YokeColumn</object-name>

    <!-- Objets transparents -->
  </animation>

  <animation>
    <type>select</type>
    <object-name>Yoke</object-name>
    <object-name>YokeColumn</object-name> 
    <condition>
    <not>
      <property>sim/yokes-visible</property>
      </not>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>YokeColumn</object-name>
    <object-name>Yoke</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> -5 </factor>
    <center>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.045 </z-m>
    </center>
    <axis>
      <x> 0 </x> <!-- near to panel -->
      <y> 1 </y> <!--up -->
      <z> 0 </z> <!-- right -->
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Yoke</object-name>
    <property>surface-positions/aileron-pos-norm</property>
    <factor> -90 </factor>
    <center>
      <x-m> 0.000 </x-m> <!-- near to panel -->
      <y-m> 0.000 </y-m> <!-- right -->
      <z-m> 0.910 </z-m> <!-- up -->
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

