<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>yokeboot.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>YokeBoots</object-name>
    <object-name>YokeBarre</object-name>

    <!-- Objets transparents -->
  </animation>

  <!-- Interior lighting -->
  <animation>
    <type>material</type>
      <condition>
        <equals>
          <property>controls/lighting/panel</property>
          <value>1</value>
        </equals>
      </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
      <factor>0.3</factor>
    </emission>
  </animation>

  <animation>
   <type>pick</type>
   <object-name>YokeBoots</object-name>
   <visible>true</visible>
   <action>
     <button>0</button>
     <repeatable>false</repeatable>
     <binding>
       <command>property-toggle</command>
       <property>sim/yokes-visible</property>
     </binding>
   </action>
  </animation>

</PropertyList>
