<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>rdf.ac</path>

  <!-- Power on switch are always on sight :-) -->
  <animation>
    <type>material</type>
    <object-name>rdfSwitch</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>rdfLamp</object-name>
    <emission>
      <red>   0 </red>
      <green> 1 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ndbLampOut</object-name>
    <emission>
      <red>   1 </red>
      <green> 0 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>ndbLamp</object-name>
    <emission>
      <red>   0 </red>
      <green> 1 </green>
      <blue>  0 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>freqHundred</object-name>
    <object-name>freqTen</object-name>
    <object-name>rdfTab</object-name>
    <object-name>rdfTabCircle</object-name>
    <condition>
      <equals>
        <property>/instrumentation/rdf/power-on</property>
        <value>1</value>
      </equals>
    </condition>
    <emission>
      <red>   0.5 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <!-- Interior lighting -->
  <animation>
    <type>material</type>
    <object-name>freqHundred</object-name>
    <object-name>freqTen</object-name>
    <object-name>freqKnob</object-name>
    <object-name>ndbLamp</object-name>
    <object-name>ndbLampOut</object-name>
    <object-name>ndbLampOff</object-name>
    <object-name>ndbNeedle</object-name>
    <object-name>ndbreboard</object-name>
    <object-name>rdfLamp</object-name>
    <object-name>rdfLampOff</object-name>
    <object-name>rdfSwitch</object-name>
    <object-name>rdfSwitchFeet</object-name>
    <object-name>rdfbox</object-name>
    <object-name>sign</object-name>
    <object-name>signFreq</object-name>
    <object-name>signMorse</object-name>
    <object-name>signKurs</object-name>
    <object-name>visses</object-name>
    <object-name>rdfTab</object-name>
    <object-name>rdfTabCircle</object-name>
    <condition>
      <equals>
        <property>controls/lighting/radiocabin</property>
        <value>1</value>
      </equals>
    </condition>
    <emission>
      <red>   0.27 </red>
      <green> 0.17 </green>
      <blue>  0.12 </blue>
      <factor-prop>/controls/lighting/brightness</factor-prop>
    </emission>
  </animation>

  <!-- Power on -->
  <animation>
    <type>select</type>
    <object-name>rdfLamp</object-name>
    <condition>
      <equals>
        <property>/instrumentation/rdf/power-on</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>rdfLampOff</object-name>
    <condition>
      <not-equals>
        <property>/instrumentation/rdf/power-on</property>
        <value>1</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ndbLamp</object-name>
    <condition>
      <and>
        <equals>
          <property>/instrumentation/rdf/power-on</property>
          <value>1</value>
        </equals>
        <not-equals>
          <property>/instrumentation/adf/ident</property>
          <value></value>
        </not-equals>
        <equals>
          <property>/instrumentation/adf/in-range</property>
          <value>1</value>
        </equals>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ndbLampOut</object-name>
    <condition>
      <or>
        <and>
          <equals>
            <property>/instrumentation/rdf/power-on</property>
            <value>1</value>
          </equals>
          <equals>
            <property>/instrumentation/adf/ident</property>
            <value></value>
          </equals>
        </and>
        <and>
          <equals>
            <property>/instrumentation/rdf/power-on</property>
            <value>1</value>
          </equals>
          <equals>
            <property>/instrumentation/adf/in-range</property>
            <value>0</value>
          </equals>
        </and>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>ndbLampOff</object-name>
    <condition>
      <not-equals>
        <property>/instrumentation/rdf/power-on</property>
        <value>1</value>
      </not-equals>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>rdfSwitch</object-name>
    <property>/instrumentation/rdf/power-on</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 50 </dep></entry>
    </interpolation>
    <center>
      <x-m> 0.000 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.135 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>rdfSwitch</object-name>
    <object-name>rdfSwitchFeet</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/adf/power-btn</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/rdf/power-on</property>
      </binding>
    </action>
  </animation>

  <!-- Bearing Knob -->
  <animation>
    <type>rotate</type>
    <object-name>rdfTab</object-name>
    <object-name>rdfTabCircle</object-name>
    <property>/instrumentation/rdf/rotation-deg</property>
    <interpolation>
      <entry><ind>   0 </ind><dep> 360 </dep></entry>
      <entry><ind> 360 </ind><dep>   0 </dep></entry>
    </interpolation>
    <condition>
      <equals>
        <property>/instrumentation/rdf/power-on</property>
        <value>1</value>
      </equals>
    </condition>
    <center>
      <x-m>  0 </x-m>
      <y-m>  0 </y-m>
      <z-m>  0 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- scroll the edges of the knob-->
  <animation>
    <type>translate</type>
    <object-name>rdfTab</object-name>
    <property>/instrumentation/rdf/rotation-deg</property>
    <factor>0</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>rdfTab</object-name>
    <visible>true</visible>
    <action>
      <name>small decrease (scrollwheel)</name>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/rdf/rotation-deg</property>
        <step>1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>small increase (scrollwheel)</name>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/rdf/rotation-deg</property>
        <step>-1</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

  <!-- scroll the circle of the knob-->
  <animation>
    <type>translate</type>
    <object-name>rdfTabCircle</object-name>
    <property>/instrumentation/rdf/rotation-deg</property>
    <factor>0</factor>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>rdfTabCircle</object-name>
    <visible>true</visible>
    <action>
      <name>small decrease (scrollwheel)</name>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/rdf/rotation-deg</property>
        <step>10</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>small increase (scrollwheel)</name>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/rdf/rotation-deg</property>
        <step>-10</step>
        <min>0</min>
        <max>360</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

  <!-- Outer Frequency-circle -->
  <animation>
    <type>rotate</type>
    <object-name>freqHundred</object-name>
    <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
    <interpolation>
      <entry><ind>    0 </ind><dep>   0 </dep></entry>
      <entry><ind> 2000 </ind><dep> 360 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.080 </y-m>
      <z-m> -0.150 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>freqHundred</object-name>
    <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
    <factor>0</factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
   <type>pick</type>
   <object-name>freqHundred</object-name>
   <visible>true</visible>
    <action>
      <name>small decrease (scrollwheel)</name>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
        <step>-100</step>
        <min>0</min>
        <max>2000</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>small increase (scrollwheel)</name>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
        <step>100</step>
        <min>0</min>
        <max>2000</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

  <!-- inner Frequency-circle -->
  <animation>
    <type>rotate</type>
    <object-name>freqTen</object-name>
    <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
    <interpolation>
      <entry><ind>    0 </ind><dep>    0 </dep></entry>
      <entry><ind> 2000 </ind><dep> 7200 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.080 </y-m>
      <z-m> -0.150 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>freqTen</object-name>
    <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
    <factor> 0 </factor>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
   <type>pick</type>
   <object-name>freqTen</object-name>
   <visible>true</visible>
    <action>
      <name>small decrease (scrollwheel)</name>
      <button>3</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
        <step>-1</step>
        <min>0</min>
        <max>2000</max>
        <wrap>1</wrap>
      </binding>
    </action>
    <action>
      <name>small increase (scrollwheel)</name>
      <button>4</button>
      <repeatable>true</repeatable>
      <binding>
        <command>property-adjust</command>
        <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
        <step>1</step>
        <min>0</min>
        <max>2000</max>
        <wrap>1</wrap>
      </binding>
    </action>
  </animation>

  <!-- Labels activated by hotspots -->
  <animation>
    <type>material</type>
    <object-name>LabelRdfPanel</object-name>
    <emission>
      <red>   1.0 </red>
      <green> 0.8 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LabelRdfPanel</object-name>
    <condition>
      <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>LabelRdfPanel</name>
    <type type="string">literal</type>
    <text type="string">Select a NDB Frequency first. Switch on the Peilgerat. If the NDB is in range, you see the green light left side of the frequency selector. Find with the Drehwinkel-Scheibe the loudest volume of this signal and click the pencil on this table. After work switch off the Peilgerat.</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.012</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.2</max-width>
    <font-resolution>
      <width type="int">32</width>
      <height type="int">32</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.000 </x-m> <!-- near to panel -->
      <y-m>  0.000 </y-m> <!-- right -->
      <z-m>  0.115 </z-m> <!-- up -->
    </offsets>
  </text>

</PropertyList>
